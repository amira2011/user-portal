<div class="d-flex justify-content-center align-items-center" >
  <%= form_with url: login_path, method: :post, class: "needs-validation", novalidate: true, style: "width: 100%; max-width: 400px;" do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control", placeholder: "Enter email", required: true %>
      <div class="invalid-feedback">
        Please enter your email.
      </div>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
      <div class="invalid-feedback">
        Please enter your password.
      </div>
    </div>
    <div class="d-grid gap-2">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
