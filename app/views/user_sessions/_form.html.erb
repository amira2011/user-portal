 

<div class="row justify-content-center">

    <div style="width: 100%; max-width: 500px;">  
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                    <p id="notice" style="text-align: center; color: red"><%= flash[:notice] %></p>
                                     <p id="alert"style="text-align: center; color: red"><%= flash[:alert] %></p>
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back! </h1>
                                    </div>
                                    <%= form_with url: login_path, method: :post, class: "user", novalidate: true do |f| %>
                                         <div class="form-group">
                                               <%= f.text_field :email, class: "form-control form-control-user", placeholder: "Enter Email Address...", required: true %>
                                        
                                        </div>
                                        <div class="form-group">
                                              <%= f.password_field :password, class: "form-control form-control-user", placeholder: "Password", required: true %>
                                             
                                        </div>
                                     

                                      

                                       
                                    <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
                                         
                                    </form>
                                    <% end %>
                                    <hr>
                                    
                                    <div class="text-center">
                                     <%= link_to "Create an Account!", new_user_path, class: "small" %> 
                                    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

</div>



