

                <div class="navbar-header">
            <div class="nav-logo"><i class="fas fa-bars"></i> Admin View</div>

            

            <%= form_tag(leads_path, method: :get, class: "nav-search d-flex") do %>
               <%= text_field_tag :value, params[:value], placeholder: "Search", class: "search-input" %>
               
               <%= button_tag(type: "submit", class: "btn") do %>
                  <i class="fa-solid fa-magnifying-glass"></i>
              <% end %>
            <% end %>

            <div class="dropdown dropright">
              <a
                class="btn dropdown-toggle"
                href="#"
                role="button"
                id="email-dropdownMenuLink"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <%= current_user.email %>
              </a>

              <ul
                class="dropdown-menu email-dropdown-menu dropdown-menu-left"
                aria-labelledby="email-dropdownMenuLink"
              >
                <li>
                <%= link_to :logout, class: "dropdown-item", method: :post do %>
                    <i class="fas fa-user"></i> <span>Logout</span>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>