
  
  
<div class="content">
            <div class="content-header">
              <div class="content-title">
                <span>Edit Profile</span>
                <i class="fa-solid fa-link"></i>
              </div>
            </div>

            <div class="profile-container">
              <div class="profile-wrapper">
                <div class="profile-photo">
                  <div class="profile-img">
                    <%= image_tag("user.jpg", alt: "Profile Photo") %>
                  </div>

                  <button class= "btn btn-primary">Upload new photo</button>
                </div>
                <div class="profile-info">
                  <h4 class="text-center" style="color: #2c9ce5ff">
                    Profile informations
                  </h4>
                 <%= form_with model: @user, class: "user" do |f| %>
                    <div class="input-group">
                    <%= f.text_field :name, placeholder: "Name", required: true %>
                      
                    </div>
                    <div class="input-group">
                      <%= f.email_field :email, class: "", placeholder: "Email Address", required: true %>   
                    </div>
                    <div class="input-group">
                      <%= f.password_field :password, class: " ", placeholder: "Password", required: true %>
                    </div>
                    <div class="input-group">
                      <%= f.password_field :password_confirmation, class: " ", placeholder: "Repeat Password", required: true %>
                    </div>
                    
                   <%= f.submit(@user.new_record? ? "Sign Up" : "Edit Profile", class: "btn btn-primary") %> 
                  <% end %>
                   <% if @user.errors.any? %>
                  <div>
                     <ul>
                        <% @user.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                     </ul>
                  </div>
                    <% end %>
                   
                </div>
              </div>
            </div>
          </div>
  